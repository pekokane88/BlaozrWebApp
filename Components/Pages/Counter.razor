@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<RadzenButton Click=IncrementCount2 Text="Add" Icon="add" ButtonStyle="ButtonStyle.Primary" />
<RadzenButton Click=IncrementCount3 Text="Add MORE" Icon="add" ButtonStyle="ButtonStyle.Warning" />

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void IncrementCount2()
    {
        currentCount += 10;
    }

    private void IncrementCount3()
    {
        currentCount += 100;
    }
}
